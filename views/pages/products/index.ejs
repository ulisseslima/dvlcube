<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products | DVLCube</title>
    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/img/favicon.svg">
    <link rel="icon" type="image/png" sizes="32x32" href="/img/favicon-32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/img/favicon-16.png">
    <link rel="shortcut icon" href="/img/favicon.ico">
    <!-- Materialize CSS -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!-- Common Styles -->
    <link rel="stylesheet" href="/css/common.css">
    <!-- Products Styles -->
    <link rel="stylesheet" href="/css/products.css">
    <style>
        .user-info {
            display: flex !important;
            align-items: center;
            gap: 8px;
        }
        .user-avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav>
        <div class="nav-wrapper">
            <a href="/" class="brand-logo" style="margin-left: 20px;">
                <i class="material-icons">shopping_cart</i>
                DVLCube Products
            </a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="/">Home</a></li>
                <li><a href="/tools">Tools</a></li>
                <li><a href="https://github.com/dvlcube" target="_blank"><i class="material-icons left">code</i>GitHub</a></li>
                <% if (user) { %>
                <li>
                    <a href="#!" class="user-info">
                        <% if (user.photo) { %>
                        <img src="<%= user.photo %>" alt="Profile" class="user-avatar">
                        <% } %>
                        <span><%= user.displayName %></span>
                    </a>
                </li>
                <li><a href="/auth/logout"><i class="material-icons left">logout</i>Logout</a></li>
                <% } %>
            </ul>
        </div>
    </nav>

    <div class="main-container">
        <!-- Search Section -->
        <div class="search-section">
            <h4><i class="material-icons">search</i>Search & Filter</h4>
            <div class="search-controls">
                <div class="search-input-wrapper">
                    <div class="input-field">
                        <i class="material-icons prefix">search</i>
                        <input type="text" id="search-input" placeholder="Search by name or brand...">
                        <label for="search-input">Search Products</label>
                    </div>
                </div>
                <div class="view-toggle">
                    <button class="btn-small active" id="grid-view-btn" onclick="setView('grid')">
                        <i class="material-icons">grid_view</i>
                    </button>
                    <button class="btn-small" id="list-view-btn" onclick="setView('list')">
                        <i class="material-icons">view_list</i>
                    </button>
                </div>
            </div>
            <div class="brand-filter-wrapper">
                <div class="brand-input-wrapper">
                    <div class="input-field">
                        <i class="material-icons prefix">label</i>
                        <input type="text" id="brand-input" placeholder="Type brand name and press Enter...">
                        <label for="brand-input">Filter by Brand</label>
                    </div>
                    <button class="btn waves-effect waves-light" onclick="addBrandFilter()">
                        <i class="material-icons left">add</i>
                        Add
                    </button>
                </div>
                <div class="active-brand-chips" id="active-brands"></div>
            </div>
        </div>

        <!-- Stats Section -->
        <div class="stats-section">
            <div class="stat-card">
                <i class="material-icons">inventory_2</i>
                <div class="stat-value" id="total-products"><%= products.length %></div>
                <div class="stat-label">Total Products</div>
            </div>
            <div class="stat-card">
                <i class="material-icons">label</i>
                <div class="stat-value" id="total-brands">0</div>
                <div class="stat-label">Brands</div>
            </div>
            <div class="stat-card">
                <i class="material-icons">visibility</i>
                <div class="stat-value" id="visible-products"><%= products.length %></div>
                <div class="stat-label">Showing</div>
            </div>
        </div>

        <!-- Products Grid View -->
        <div class="products-grid" id="products-grid">
            <% products.forEach(product => { %>
            <div class="product-card" data-name="<%= product.name.toLowerCase() %>" data-brand="<%= product.brand.toLowerCase() %>">
                <div class="product-name">
                    <i class="material-icons">inventory_2</i>
                    <%= product.name %>
                </div>
                <div class="product-brand"><%= product.brand %></div>
                <div class="product-id">ID: <%= product.id %></div>
                <div class="product-actions">
                    <a href="<%= 'products/ops/'+product.id %>" class="btn-small waves-effect waves-light">
                        <i class="material-icons left">info</i>
                        Details
                    </a>
                    <a href="<%= 'products/ops/brand/'+product.brand %>" class="btn-small secondary waves-effect">
                        <i class="material-icons left">label</i>
                        Brand
                    </a>
                </div>
            </div>
            <% }) %>
        </div>

        <!-- Products List View (hidden by default) -->
        <div class="products-list" id="products-list" style="display: none;">
            <% products.forEach(product => { %>
            <div class="product-list-item" data-name="<%= product.name.toLowerCase() %>" data-brand="<%= product.brand.toLowerCase() %>">
                <div class="product-info">
                    <h6><%= product.name %></h6>
                    <div class="product-meta">
                        <span class="product-brand" style="background: none; color: var(--primary-color); padding: 0; font-weight: 500;"><%= product.brand %></span>
                        <span style="margin: 0 8px; color: var(--text-secondary);">â€¢</span>
                        <span style="color: var(--text-secondary);">ID: <%= product.id %></span>
                    </div>
                </div>
                <div class="product-actions">
                    <a href="<%= 'products/ops/'+product.id %>" class="btn-small waves-effect waves-light">
                        <i class="material-icons left">info</i>
                        Details
                    </a>
                    <a href="<%= 'products/ops/brand/'+product.brand %>" class="btn-small secondary waves-effect">
                        <i class="material-icons left">label</i>
                        Brand
                    </a>
                </div>
            </div>
            <% }) %>
        </div>

        <!-- Empty State -->
        <div class="empty-state" id="empty-state" style="display: none;">
            <i class="material-icons">inbox</i>
            <h5>No products found</h5>
            <p>Try adjusting your search or filter criteria</p>
        </div>
    </div>

    <!-- Materialize JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    
    <script>
        // Products data
        const products = JSON.parse('<%- JSON.stringify(products) %>');
        
        // Extract unique brands
        const brands = [...new Set(products.map(p => p.brand))].sort();
        
        // Update brand count
        document.getElementById('total-brands').textContent = brands.length;

        // Active filters - declare early to avoid initialization errors
        let activeFilters = {
            search: '',
            brands: [], // Changed to array for multi-brand filtering
            view: 'grid'
        };

        // Add brand filter
        function addBrandFilter() {
            const input = document.getElementById('brand-input');
            const brandName = input.value.trim();
            
            if (brandName && !activeFilters.brands.includes(brandName.toLowerCase())) {
                activeFilters.brands.push(brandName.toLowerCase());
                input.value = '';
                renderActiveBrands();
                filterProducts();
            }
        }

        // Remove brand filter
        function removeBrandFilter(brand) {
            activeFilters.brands = activeFilters.brands.filter(b => b !== brand);
            renderActiveBrands();
            filterProducts();
        }

        // Render active brand chips
        function renderActiveBrands() {
            const container = document.getElementById('active-brands');
            container.innerHTML = '';
            
            activeFilters.brands.forEach(brand => {
                const chip = document.createElement('div');
                chip.className = 'chip';
                chip.innerHTML = `
                    <span>${brand}</span>
                    <i class="material-icons" onclick="removeBrandFilter('${brand}')">close</i>
                `;
                container.appendChild(chip);
            });
        }

        // Brand input enter key handler
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('brand-input').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    addBrandFilter();
                }
            });
        });

        // Search input handler
        document.getElementById('search-input').addEventListener('input', function(e) {
            activeFilters.search = e.target.value.toLowerCase();
            filterProducts();
        });

        // Filter products
        function filterProducts() {
            const gridCards = document.querySelectorAll('#products-grid .product-card');
            const listItems = document.querySelectorAll('#products-list .product-list-item');
            let visibleCount = 0;

            const items = activeFilters.view === 'grid' ? gridCards : listItems;

            items.forEach(item => {
                const name = item.dataset.name;
                const brand = item.dataset.brand;

                const matchesSearch = !activeFilters.search || 
                    name.includes(activeFilters.search) || 
                    brand.includes(activeFilters.search);

                // Match if no brands selected OR brand is in the selected brands list
                const matchesBrand = activeFilters.brands.length === 0 || 
                    activeFilters.brands.includes(brand);

                if (matchesSearch && matchesBrand) {
                    item.style.display = '';
                    visibleCount++;
                } else {
                    item.style.display = 'none';
                }
            });

            // Update visible count
            document.getElementById('visible-products').textContent = visibleCount;

            // Show/hide empty state
            const emptyState = document.getElementById('empty-state');
            const gridView = document.getElementById('products-grid');
            const listView = document.getElementById('products-list');

            if (visibleCount === 0) {
                emptyState.style.display = 'block';
                gridView.style.display = 'none';
                listView.style.display = 'none';
            } else {
                emptyState.style.display = 'none';
                if (activeFilters.view === 'grid') {
                    gridView.style.display = 'grid';
                    listView.style.display = 'none';
                } else {
                    gridView.style.display = 'none';
                    listView.style.display = 'block';
                }
            }
        }

        // Set view mode
        function setView(view) {
            activeFilters.view = view;
            
            const gridBtn = document.getElementById('grid-view-btn');
            const listBtn = document.getElementById('list-view-btn');
            
            if (view === 'grid') {
                gridBtn.classList.add('active');
                listBtn.classList.remove('active');
            } else {
                listBtn.classList.add('active');
                gridBtn.classList.remove('active');
            }
            
            filterProducts();
        }

        // Initialize Materialize components
        document.addEventListener('DOMContentLoaded', function() {
            M.AutoInit();
        });
    </script>
</body>
</html>