{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program (nvm)",
      "runtimeExecutable": "/bin/bash",
      "runtimeArgs": [
        "-i",
        "-c",
        "source $HOME/.nvm/nvm.sh && node ${workspaceFolder}/index.js"
      ],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
